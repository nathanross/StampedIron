<domain type='kvm'>
  <name>${name}</name>
  <memory>${mem}</memory>
  <vcpu>${vcpu}</vcpu>
  <os>
    <type arch='x86_64'>hvm</type>
  </os>
  <clock sync="localtime"/>
  <devices>
    <emulator>/usr/bin/kvm</emulator>
    ${disks}
    <interface type='network'>
      <source network='default'/>
    </interface>
    <graphics type='vnc' port='5904' listen='0.0.0.0' />
  </devices>
</domain>
